<div class="family-header d-flex flex-row">
  <div class="header-img"></div>
  <div class="header-content">
    <div class="overlay"></div>
    <div class="d-flex justify-content-center">
      <div class="mt-5">
        <div class="text-center content-text">
          <h3>Bruiloft</h3>
          <h4>Samuel & Corine</h4>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="family-content">
  <div class="card-wrapper">
    <div class="d-flex justify-content-center">
      <div class="card shadow rounded">
        <% if @family.photo %>
          <div class="card-img-top"><%=  %></div>
        <% end %>
        <div class="card-header">
          <div class="d-flex justify-content-center">
            <div class="mt-2"><h5><strong><%= @family.name %></strong></h5></div>
          </div>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="d-flex">
              <div><strong>Gasten</strong></div>
              <div class="ml-auto"><strong>Aanwezig</strong></div>
            </div>
          </li>
          <% @guests.each do |guest| %>
            <li class="list-group-item">
              <div class="d-flex">
                <div><%= guest.name %></div>
                <div class="ml-auto mr-4">
                  <%= check_box_tag :attending, nil, false, class: 'cbx', style: 'display:none', id: "attending_"+guest.id.to_s %>
                  <%= label_tag :attending, class: "toggle", for: "attending_"+guest.id.to_s do %><span></span><% end %>
                </div>
              </div>
            </li>
          <% end %>
          <li class="list-group-item">
            <div class="d-flex">
              <div class="form-group">
                <strong><%= label_tag :bericht %></strong>
                <%= text_area_tag :message, @family.message, class: 'form-control', size: '50x3' %>
              </div>
            </div>
            <div class="d-flex">
              <div class="form-group w-100">
                <%= label_tag :foto %>
                <%= file_field_tag :photo, class: "form-control", autocomplete: "off", style: "display:none", id: "real-input-field" %>
                <div class="input-group">
                  <%= text_field_tag :visible_photo_field, nil, class: "form-control", autocomplete: "off", required: true %>
                  <div class="input-group-append">
                    <%= button_tag "Bladeren", class: "btn btn-secondary", type: "button", id: "browse-btn" %>
                  </div>
                </div>
                <div class="invalid-feedback"></div>
              </div>
            </div>
          </li>
        </ul>
        <div class="card-body">
          <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-outline-primary">
              <i class="fas fa-paper-plane"></i>&ensp;Verstuur
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="family-footer">
  <div class="fixed-bottom text-center mb-2" style="z-index:1">
    <div>Gemaakt door Samuel van Eck</div>
  </div>
</div>
