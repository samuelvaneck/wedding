<div class="family-header d-flex flex-row">
  <div class="header-img" aria-hashpop="true"></div>
  <div class="header-content" aria-hashpop="true">
    <div class="overlay">
    </div>
    <div class="d-flex flex-nowrap">
      <div class="mt-3">
        <div class="d-flex content-text flex-column parisienne">
          <div class="m-2">
            <h1>Bruiloft</h1>
          </div>
          <div class="m-2 d-flex flex-column text-center">
            <div><h2>Samuel</h2></div>
            <div><h2>&</h2></div>
            <div><h2>Corine</h2></div>
          </div>
          <div class="m-2">
            <span class="content-date">10 mei 2019</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="family-content h-100" id="content">
  <% if @family %>
    <%= render 'reply_card' %>
  <% else %>
    <div class="flipping-card show-front" style="top:80px">
      <div class="card__face card__face--front h-100">
        <%= render 'uuid_card' %>
      </div>
      <div class="card__face card__face--right"></div>
      <div class="card__face card__face--back"></div>
      <div class="card__face card__face--left"></div>
    </div>
  <% end %>
</div>
<div class="family-footer">
  <div class="fixed-bottom text-center mb-2" style="z-index:1">
    <div>Gemaakt door Samuel van Eck</div>
  </div>
</div>
