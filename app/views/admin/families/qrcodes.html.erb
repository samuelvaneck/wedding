<table class="table table-borderless">
  <tbody>
    <% @families.in_groups_of(2).each do |group| %>
      <tr style="page-break-inside: avoid !important;">
        <% group.compact.each do |family| %>
          <% uuid_arr = family.uuid.upcase.split("") %>
          <td class="text-center">
            <div class="mt-3">
              <h4>bruiloftsamuelencorine.nl</h4>
              <div>
                <span>code</span>
                <h4 class="mr-2"> 
                  <span class="mr-2">
                    <%= uuid_arr[0] %>
                    <%= uuid_arr[1] %>
                    <%= uuid_arr[2] %>
                  </span>
                  <span>
                    <%= uuid_arr[3] %>
                    <%= uuid_arr[4] %>
                    <%= uuid_arr[5] %>
                  </span>
                </h4>
              </div>
            </div>
            <hr />
            <div class="mt-4">
              <%= raw family.qrcode %>
            </div>
            <div class="mt-5">
              <hr />
              <%= family.name %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
