      <tr>
        <% group.compact.each do |family| %>
          <td class="text-center">
            <h2 class="m-3">Bruiloft code</h2>
            <div class="m-3">
              www.bruiloftsamuelencorine.nl
            </div>
            <div class="m-3">
             <span class="mr-3">Code</span><%= family.uuid.upcase %>
            </div>
