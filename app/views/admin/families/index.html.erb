<div class="d-flex justify-content-center mt-3">
  <div><h2 class="">Families</h2></div>
</div>
<div class="d-flex mb-2">
  <%= link_to "New", new_admin_family_path, class: 'btn btn-outline-primary' %>
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#import-guests-modal">
    Import guests
  </button>
  <div class="ml-auto">
    <input id="search" type="text" class="form-control" placeholder="Search..." autocomplete="off" data-table="families-table" data-search-path="<%= admin_families_path %>" />
  </div>
</div>
<div class="d-flex">
  <table class="table table-striped" id="families-table">
    <thead>
      <tr>
        <th>Name</th>
        <th class="d-none d-md-table-cell">Email</th>
        <th class="text-center">Response</th>
        <th class="text-center">Guests</th>
        <th class="text-center d-none d-md-table-cell">Message</th>
        <th class="text-center d-none d-lg-table-cell">Photo</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @families.each do |family| %>
        <%= render family %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="modal" id="import-guests-modal" tabindex="-1" role="dialog" aria-labelledby="importGuestModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Import guests</h5>
        <button type="button" class="close" data-dismiss="modal">
          <i aria-hidden="true">&times;</i>
        </button>
      </div>
      <div class="modal-body">
        <h6>Select Excel file to import</h6>
        <%= form_tag '/admin/families/import', multipart: true do %>
          <div class="form-group">
            <%= file_field_tag :file, class: "form-control", autocomplete: "off", style: "display:none", id: "real-input-field" %>
            <div class="input-group">
              <%= text_field_tag :visible_file_field, nil, class: "form-control", autocomplete: "off", required: true %>
              <div class="input-group-append">
                <%= button_tag "Browse", class: "btn btn-outline-secondary", type: "button", id: "browse-btn" %>
              </div>
            </div>
            <div class="invalid-feedback"></div>
          </div>
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-primary float-right">Import</button>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>

<script>
  $("#search").on("keyup", function() { searchItems($(this)) });
</script>
