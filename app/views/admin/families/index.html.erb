<%= render 'breadcrumb' %>
<div class="d-flex justify-content-center mt-3">
  <div><h2 class="">Families</h2></div>
</div>
<div class="d-flex mb-2">
  <%= link_to "New", new_admin_family_path, class: 'btn btn-outline-primary' %>
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#import-guests-modal">
    Import guests
  </button>
  <%= link_to qrcodes_admin_families_path(format: :pdf), class: "btn btn-outline-primary" do %>
    QRCodes 
  <% end %>
  <div class="ml-auto">
    <div class="input-group">
      <input id="search" type="text" class="form-control" placeholder="Search..." autocomplete="off" data-table="families-table" data-search-path="<%= admin_families_path %>" />
      <div class="input-group-append">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-hashpop="true" aria-expanded="false">Sort</button>
        <div class="dropdown-menu">
          <%= link_to "Name", admin_families_path(order: "name"), class: "dropdown-item" %>
          <%= link_to "Email", admin_families_path(order: "email"), class: "dropdown-item" %>
          <%= link_to "Response", admin_families_path(order: "response"), class: "dropdown-item" %>
          <%= link_to "UUID", admin_families_path(order: "uuid"), class: "dropdown-item" %>
          <%= link_to "Allergien", admin_families_path(order: "allergies"), class: "dropdown-item" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex">
  <table class="table table-striped" id="families-table">
    <thead>
      <tr>
        <th>Name</th>
        <th class="d-none d-lg-table-cell">Email</th>
        <th class="text-center">Response</th>
        <th class="text-center d-none d-md-table-cell">Guests</th>
        <th class="text-center d-none d-lg-table-cell">UUID<</th>
        <th class="text-center d-none d-md-table-cell">Messages</th>
        <th clas="text-center d-none d-lg-table-cell">Allergien</th>
        <th class="text-center d-none d-lg-table-cell">Photo</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @families.each do |family| %>
        <%= render family %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-center flex-row m-3" id="pagination">
  <%= bootstrap_will_paginate @families %>
</div>

<div class="modal" id="import-guests-modal" tabindex="-1" role="dialog" aria-labelledby="importGuestModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Import guests</h5>
        <button type="button" class="close" data-dismiss="modal">
          <i aria-hidden="true">&times;</i>
        </button>
      </div>
      <div class="modal-body">
        <h6>Select Excel file to import</h6>
        <%= form_tag '/admin/families/import', multipart: true do %>
          <div class="form-group">
            <%= file_field_tag :file, class: "form-control", autocomplete: "off", style: "display:none", id: "real-input-field" %>
            <div class="input-group">
              <%= text_field_tag :visible_file_upload_field, nil, class: "form-control", autocomplete: "off", required: true %>
              <div class="input-group-append">
                <%= button_tag "Browse", class: "btn btn-outline-secondary", type: "button", id: "browse-btn" %>
              </div>
            </div>
            <div class="invalid-feedback"></div>
          </div>
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-primary float-right">Import</button>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
