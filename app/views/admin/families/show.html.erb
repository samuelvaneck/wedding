<%= provide(:title, "Wedding | Family #{@family.name}") %>

<div class="d-flex justify-content-center mt-3">
  <h2>Family</h2>
</div>

<div class="flex-row mt-2 mb-2">
  <%= link_to "Back", admin_families_path, class: "btn btn-outline-secondary" %>
  <%= link_to "Delete", admin_family_path(@family), method: :delete, class: "btn btn-outline-primary float-right ml-2", data: { confirm: "Are you sure?" } %>
  <%= link_to "Edit", edit_admin_family_path(@family), class: "btn btn-outline-secondary float-right" %>
</div>

<div class="d-flex">
  <table class="table table-striped">
    <tbody>
    <tr>
      <td colspan="2">
        <strong>Family details</strong>
      </td>
    </tr>
    <tr>
      <th>Family</th>
      <td><%= @family.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= mail_to @family.email %></td>
    </tr>
    <tr>
      <th>Response</th>
      <td><%= boolean_icon @family.response %></td>
    </tr>
    <tr>
      <th>uuid</th>
      <td><%= @family.uuid %></td>
    </tr>
    <tr>
      <th>Guests</th>
      <td>
        <% @family.guests.each do |guest| %>
          <p><%= link_to guest.name, admin_guest_path(guest) %></p>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Message</th>
      <td><%= link_to @family.message.content, admin_message_path(@family.message) rescue "none" %></td>
    </tr>
    <tr>
      <th>Photo</th>
      <% if @family.photo.attached? %>
        <td><%= image_tag @family.photo, class: "thumbnail" %></td>
      <% else %>
        <td>none</td>
      <% end %>
    </tr>
    </tbody>
  </table>
</div>
