        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  percentageChart("#chart-response", $("#chart-response").attr("data-percentage"));
  percentageChart("#chart-awaiting", $("#chart-awaiting").attr("data-percentage"));
  percentageChart("#chart-attending", $("#chart-attending").attr("data-percentage"));
  percentageChart("#chart-absent", $("#chart-absent").attr("data-percentage"));
</script>
