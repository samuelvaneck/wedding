<%= provide(:title, "Wedding | Guests") %>

<%= render 'breadcrumb' %>

<div class="d-flex justify-content-center mt-3">
  <div><h2 class="">Guests</h2></div>
</div>
<div class="d-flex mb-2">
  <div class="btn btn-outline-primary">
    <%= link_to "New", new_admin_guest_path %>
  </div>
  <div class="ml-auto">
    <input id="search" type="text" class="form-control" placeholder="Search..." autocomplete="off" data-table="guests-table" data-search-path="<%= admin_guests_path %>" />
  </div>
</div>
<div class="d-flex">
  <table class="table table-striped" id="guests-table">
    <thead>
      <tr>
        <th>
          <div class="d-flex flex-row">
            <div>Name</div>
            <div class="ml-auto">
              <%= link_to admin_guests_path(order: "name") do %>
                <i class="fas fa-caret-down fa-lg"></i>
              <% end %>
              <%= link_to admin_guests_path(order: "name", reverse: "true") do %>
                <i class="fas fa-caret-up fa-lg"></i>
              <% end %>
            </div>
          </div>
        </th>
        <th class="text-center">
          <div class="d-flex flex-row">
            <div>Attending</div>
            <div class="ml-auto">
              <%= link_to admin_guests_path(order: "attending") do %>
                <i class="fas fa-caret-down fa-lg"></i>
              <% end %>
              <%= link_to admin_guests_path(order: "attending", reverse: "true") do %>
                <i class="fas fa-caret-up fa-lg"></i>
              <% end %>
            </div>
          </div>
        </th>
        <th class="text-center d-none d-md-table-cell">
          <div class="d-flex flex-row">
            <div>Day guest</div>
            <div class="ml-auto">
              <%= link_to admin_guests_path(order: "day_guest") do %>
                <i class="fas fa-caret-down fa-lg"></i>
              <% end %>
              <%= link_to admin_guests_path(order: "day_guest", reverse: "true") do %>
                <i class="fas fa-caret-up fa-lg"></i>
              <% end %>
            </div>
          </div>
        </th>
        <th class="text-center d-none d-md-table-cell">Family</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @guests.each do |guest| %>
        <%= render guest %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex flex-row justify-content-center" id="pagination">
  <%= bootstrap_will_paginate @guests %>
</div>
