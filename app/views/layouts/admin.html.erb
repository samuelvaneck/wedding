<!DOCTYPE html>
<html>
  <head>
    <title>Wedding</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Parisienne|Source+Sans+Pro" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV["GOOGLE_MAPS_API_KEY"]}" %>
    <%= javascript_pack_tag 'admin', 'data-turbolinks-track': 'reload' %>
    <meta charset="UTF-8">
    <%= yield(:head_tags) %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div id="admin-header" class="d-flex flex-row w-100">
          <div id="#open-mobile-nav" class="ml-2 mt-2 d-sm-none" onClick="openNav()">
            <i class="fas fa-bars fa-2x"></i>
          </div>
          <div class="m-2 flex-fill text-center">
            <h3>Wedding</h3>
          </div>
          <% if user_signed_in? %>
            <div class="admin-btns">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-outline-light float-right mt-2 ml-2' %>
              <% if params[:controller].split("/").first != "admin" %>
                <%= link_to "Admin", admin_families_path, class: "btn btn-outline-primary float-right mt-2" %>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= render 'layouts/sidenav' %>
        <div class="col" id="main">
          <div class="mt-2">
            <% if notice %>
              <p class="alert alert-info"><%= notice %></p>
            <% end %>
            <% if flash[:success] %>
              <p class="alert alert-success"><%= flash[:success] %></p>
            <% end %>
            <% if flash[:warning] %>
              <p class="alert alert-warning"><%= flash[:warning] %></p>
            <% end %>
            <% if alert %>
              <p class="alert alert-danger"><%= alert %></p>
            <% end %>
          </div>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
